<p>
  <b>Home goals:</b>
  <%= @hint.home_goals %>
</p>

<p>
  <b>Away goals:</b>
  <%= @hint.away_goals %>
</p>

<p>
  <b>User:</b>
  <%= @hint.user_id %>
</p>

<p>
  <b>Game:</b>
  <%= @hint.game_id %>
</p>


<%= link_to 'Edit', edit_hint_path(@hint) %> |
<%= link_to 'Back', hints_path %>

<h1>Listing hints</h1>

<table>
  <tr>
    <th>Home goals</th>
    <th>Away goals</th>
    <th>User</th>
    <th>Game</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hints.each do |hint| %>
  <tr>
    <td><%= hint.home_goals %></td>
    <td><%= hint.away_goals %></td>
    <td><%= hint.user_id %></td>
    <td><%= hint.game_id %></td>
    <td><%= link_to 'Show', hint %></td>
    <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
    <td><%= link_to 'Destroy', hint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Hint', new_hint_path %>
