<p id="notice"><%= notice %></p>

<% if @user.typeof.to_i == User::USER_TYPE[:ADMIN][:id]  %>

  <p>
    <b>Name:</b>
    <%= @user.name %>
  </p>

  <p>
    <b>Lastname:</b>
    <%= @user.lastname %>
  </p>

  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Password:</b>
    <%= @user.password %>
  </p>

  <p>
    <b>Score:</b>
    <%= @user.score %>
  </p>

  <%= link_to 'Reset Score', user_reset_score_path(@user.id) %> |
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

  <style type="text/css">
    body {
      background-color: #CCC;
    }
  </style>

<% end %>