<h1>Listando Jogos</h1>

<table class="admin_teams">
  <tr>    
    <th>ID</th>
    <th>Local</th>
    <th>Data</th>
    <th>Hora</th>
    <th>Computed</th>
    <th>Finished</th>
    <th>Closed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><i><%= game.id %></i></td>
    <td><%= game.local %></td>
    <td><%=l game.gamedate, :format => :complete%></td>
    <td><%=l game.gametime, :format => :smallshort%></td>
    <td><%= game.computed %></td>
    <td><%= game.finished %></td>
    <td><%= game.closed %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="admin_teams_div">
  <%= link_to 'New Game', new_game_path %>
</div>

